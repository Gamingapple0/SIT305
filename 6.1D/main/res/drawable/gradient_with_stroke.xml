<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Define gradient colors -->
    <gradient
        android:startColor="@color/blue"
    android:endColor="@color/teal"
    android:angle="45" /> <!-- Gradient angle -->

    <!-- Define stroke -->
    <stroke
        android:width="1dp"
        android:color="@android:color/black" /> <!-- Stroke color -->

    <!-- You can add corner radius if needed -->
    <corners android:radius="8dp" /> <!-- Corner radius -->

</shape>
